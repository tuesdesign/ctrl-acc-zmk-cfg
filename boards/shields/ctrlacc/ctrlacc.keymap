/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer { // Layer 0
            // -------------------------------------
            // |     1     |     2     |     3     |     4     |     K     |
            // |     Q     |     W     |     E     |     R     |   LSHFT   |
            // |     A     |     S     |     D     |     F     |   LCTRL   |
            // |     Z     |     X     |     C     |     V     |   SPACE   |
            bindings = <
                &kp 1    &kp 2    &kp 3     &kp 4    &kp ESC
                &kp Q    &kp W    &kp E     &kp R    &kp LSHFT
                &kp A    &kp S    &kp D     &kp F    &kp LCTRL
                &kp Z    &kp X    &kp C     &kp V    &kp SPACE
            >;
        };
    };
 };